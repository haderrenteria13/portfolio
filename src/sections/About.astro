---
import ExperienceTimeline from "../components/ExperienceTimeline.jsx";
import ProximityTitle from "../components/ProximityTitle.jsx";
import { useTranslations, type Lang } from "../i18n/utils";

interface Props {
  lang?: Lang;
}

const { lang = "es" } = Astro.props;
const t = useTranslations(lang);
---

<section
  id="about"
  class="relative bg-black min-h-screen py-32 overflow-hidden"
>
  {/* Background Elements - Seamless Transition */}
  <div class="absolute inset-0 pointer-events-none">
    {/* Top Gradient (Matches Main bottom) */}
    <div
      class="absolute top-0 left-0 right-0 h-96 bg-gradient-to-b from-black via-black/90 to-transparent z-10"
    >
    </div>

    {/* Noise Texture Overlay */}
    <div
      class="absolute inset-0 opacity-[0.03] pointer-events-none z-0 mix-blend-overlay"
      style="background-image: url('https://grainy-gradients.vercel.app/noise.svg');"
    >
    </div>

    {/* Center Glow */}
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[800px] bg-amber-500/5 rounded-full blur-[120px] opacity-40"
    >
    </div>

    {/* Bottom Gradient (Matches Contact top) */}
    <div
      class="absolute bottom-0 left-0 right-0 h-96 bg-gradient-to-t from-black via-black/90 to-transparent z-10"
    >
    </div>
  </div>

  <div class="container mx-auto px-6 relative z-10">
    {/* Section Header */}
    <div class="text-center mb-20">
      <div
        class="inline-flex items-center justify-center px-4 py-1.5 mb-8 rounded-full bg-white/5 border border-white/10 backdrop-blur-md shadow-[0_0_15px_rgba(251,191,36,0.1)]"
      >
        <span
          class="text-amber-300/90 font-mono text-[10px] tracking-[0.3em] uppercase"
        >
          {lang === "es" ? "La Trayectoria" : "The Journey"}
        </span>
      </div>

      <h2
        class="text-3xl md:text-5xl lg:text-6xl font-bold text-white leading-[0.9] tracking-tight mb-6"
      >
        <ProximityTitle
          client:idle
          text={lang === "es" ? "Experiencia que" : "Experience That"}
          className="block font-playfair mb-2 md:mb-4"
          fromFontVariationSettings="'wght' 400"
          toFontVariationSettings="'wght' 900"
        />
        <div
          class="flex flex-wrap justify-center gap-x-3 md:gap-x-5 items-baseline"
        >
          <span class="font-playfair font-medium text-white">
            {lang === "es" ? "da" : "Brings"}
          </span>
          <span
            class="font-playfair italic font-black text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-yellow-400 to-amber-200 pb-4 bg-[length:200%_auto] animate-shine"
          >
            {lang === "es" ? "vida a las ideas" : "Ideas to Life"}
          </span>
        </div>
      </h2>

      {/* Personal Introduction */}
      <p
        class="text-gray-400 text-lg md:text-2xl max-w-3xl mx-auto leading-relaxed mt-12 font-cursive opacity-80"
      >
        {
          lang === "es"
            ? "Estudiante de Ingeniería de Sistemas apasionado por crear experiencias web excepcionales. Combino diseño moderno con código limpio para dar vida a ideas innovadoras."
            : "Systems Engineering student passionate by creating exceptional web experiences. I combine modern design with clean code to bring innovative ideas to life."
        }
      </p>
    </div>

    {/* Stats Cards */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto mb-32">
      {/* Years Learning */}
      <div
        class="group relative p-6 rounded-2xl bg-white/[0.02] border border-white/5 backdrop-blur-sm hover:bg-white/[0.04] hover:border-amber-400/20 transition-all duration-500"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-amber-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"
        >
        </div>
        <div class="relative">
          <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">
            4+
          </div>
          <div class="text-white/60 text-sm font-medium">
            {lang === "es" ? "Años Aprendiendo" : "Years Learning"}
          </div>
        </div>
      </div>

      {/* Projects */}
      <div
        class="group relative p-6 rounded-2xl bg-white/[0.02] border border-white/5 backdrop-blur-sm hover:bg-white/[0.04] hover:border-amber-400/20 transition-all duration-500"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-amber-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"
        >
        </div>
        <div class="relative">
          <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">
            10+
          </div>
          <div class="text-white/60 text-sm font-medium">
            {lang === "es" ? "Proyectos Completados" : "Projects Completed"}
          </div>
        </div>
      </div>

      {/* Technologies */}
      <div
        class="group relative p-6 rounded-2xl bg-white/[0.02] border border-white/5 backdrop-blur-sm hover:bg-white/[0.04] hover:border-amber-400/20 transition-all duration-500"
      >
        <div
          class="absolute inset-0 bg-gradient-to-br from-amber-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"
        >
        </div>
        <div class="relative">
          <div class="text-4xl md:text-5xl font-bold text-amber-400 mb-2">
            15+
          </div>
          <div class="text-white/60 text-sm font-medium">
            {lang === "es" ? "Tecnologías" : "Technologies"}
          </div>
        </div>
      </div>
    </div>

    {/* Experience Timeline */}
    <ExperienceTimeline client:visible />
  </div>
</section>
